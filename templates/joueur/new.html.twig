<div class="section-top-border">
    <div class="row">
        <div class="col-md-4">
            <h3 class="mb-20"></h3>
            <div class="row">
                <div class="col-lg-8 col-md-8">
                    <h3 class="breadcrumb_iner_item">Add Joueur</h3>

                    {{ include('joueur/_form.html.twig') }}


                </div>
            </div>
        </div>
        <div class="col-md-4 mt-sm-30">
            <h3 class="mb-20">Unordered List</h3>


            <table class="table">
                <thead>
                <tr>
                    <th>Nomjoueur</th>
                    <th>Prenomjoueur</th>
                    <th>Datedenaissance</th>
                    <th>Age</th>
                    <th>Sexe</th>
                    <th>Ville</th>
                    <th>Imgjoueur</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for joueur in joueur %}
                    <tr>
                        <td>{{ joueur.nomjoueur }}</td>
                        <td>{{ joueur.prenomjoueur }}</td>
                        <td>{{ joueur.datedenaissance ? joueur.datedenaissance|date('Y-m-d') : '' }}</td>
                        <td>{{ joueur.age }}</td>
                        <td>{{ joueur.sexe }}</td>
                        <td>{{ joueur.ville }}</td>
                        {% if joueur.imgjoueur != null %}
                            <td><img src="{{ asset('uploads/' ~ joueur.imgjoueur) }}" alt="" style="width: 50px;height: 50px"> </td>
                        {% endif %}
                        {% if joueur.imgjoueur == null %}
                            <td>No.Image</td>
                        {% endif %}
                        <td>
                            <a href="{{ path('app_joueur_edit', {'idjoueur': joueur.idjoueur}) }}">✏️</a>
                            {{ include('joueur/_delete_form.html.twig') }}

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>




        </div>
    </div>
</div>



